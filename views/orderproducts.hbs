    <body>
        <header>
            <h1>Order Products</h1>
            <nav>
                <ul>
                    <li><a href="/index">Home Page</a></li>
                    <li><a href="/customers">Customers</a></li>
                    <li><a href="/enployees">Employees</a></li>
