<table id="orders-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.orderID}}</td>
            <td>{{this.customerID}}</td>
            <td>{{this.employeeID}}</td>
            <td>{{this.orderType}}</td>
            <td>{{this.orderStatus}}</td>
            <td>{{this.orderDate}}</td>
            <td>{{this.total}}</td>
            <td><button onclick="deleteOrder({{this.orderID}})">Delete</button></td>

        </tr>
        {{/each}}
    </tbody>
</table>

<script src="./js/delete_order.js"></script>
{{!-- Form to add a record to the table using standard HTML forms --}}
