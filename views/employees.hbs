{{!-- Create a table --}}
<!DOCTYPE html>
<head>
        <title>Employees</title>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <header>
            <h1>Employees</h1>
        </header>


<table id="employees-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>edit</th>
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-id = "{{this.employeeID}}">
            <td>{{this.employeeID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.role}}</td>
            <td><button class="edit-button">Edit</button></td>
            <td><button onclick="deleteEmployee({{this.employeeID}})">Delete</button></td>

        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/update_employee.js"></script>
<script src="./js/delete_employee.js"></script>
{{!-- Form to add a record to the table using standard HTML forms --}}
<h2>Add new employee</h2>
<p>To add a new employee, please enter their information below and click `Submit`!</p>
<form id="add-employee-form-ajax">
    <label for="input-fname">First Name: </label>
    <input type="text" name="input-fname" id="input-fname">
    
    <label for="input-lname">Last Name: </label>
    <input type="text" name="input-lname" id="input-lname">

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email">

    <label for="input-phone">Phone: </label>
    <input type="number" name="input-pjone" id="input-phone">

    <label for="input-role">Role: </label>
    <input type="text" name="input-role" id="input-role">

    <input type="submit">
</form> 
<script src="./js/add_employee.js"></script>
